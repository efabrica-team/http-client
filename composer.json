{
    "name": "efabrica/http-client",
    "description": "Wraps Symfony HTTP client, adds named arguments.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Efabrica\\HttpClient\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Richard Popelis",
            "email": "richard@popelis.sk"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/http-client": "^6.4|^7.0",
        "symfony/stopwatch": "^6.4|^7.0"
    },
    "suggest": {
        "riki137/amp-client": "for AMPHPv3 event loop support"
    },
    "require-dev": {
        "tracy/tracy": "^2.10",
        "latte/latte": "^3.0",
        "amphp/amp": "^3.0",
        "amphp/http-client": "^5.0"
    }
}
